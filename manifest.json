{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Pixiv Helper",
    "description": "Pixiv Helper for Chrome.",
    "icons": {
        "16": "ico/16.png",
        "32": "ico/32.png",
        "48": "ico/48.png",
        "64": "ico/64.png",
        "128": "ico/128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "ico/16.png",
            "32": "ico/32.png",
            "48": "ico/48.png",
            "64": "ico/64.png",
            "128": "ico/128.png"
        }
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "tabs",
        "downloads",
        "declarativeContent"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.pixiv.net/*"
            ],
            "css": [
                "css/_main.css"
            ],
            "js": [
                "js/jquery.min.js",
                "js/URI.min.js",
                "js/_main.js"
            ]
        }
    ]
}