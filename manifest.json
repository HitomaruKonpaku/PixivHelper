{
    "manifest_version": 2,
    "version": "2.0",
    "name": "Pixiv Helper",
    "description": "Pixiv Helper for Chrome",
    "icons": {
        "16": "ico/16.png",
        "32": "ico/32.png",
        "48": "ico/48.png",
        "64": "ico/64.png",
        "128": "ico/128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "ico/16.png",
            "32": "ico/32.png",
            "48": "ico/48.png",
            "64": "ico/64.png",
            "128": "ico/128.png"
        }
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.pixiv.net/member_illust*"
            ],
            "css": [
                "css/vuetify.custom.css",
                "css/pixiv.css"
            ],
            "js": [
                "js/vue.min.js",
                "js/vuetify.min.js",
                "js/jquery.min.js",
                "js/URI.min.js",
                "js/download.min.js",
                "js/downloadpromise.js",
                "js/pixiv.js"
            ]
        }
    ],
    "permissions": [
        "declarativeContent",
        "tabs",
        "*://*.pixiv.net/*",
        "*://*.pximg.net/*"
    ],
    "web_accessible_resources": [
        "html/*"
    ]
}